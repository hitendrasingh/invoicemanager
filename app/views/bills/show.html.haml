.span12
  .span8
    %h3 Bill
    = @bill.summary
  .span4
    .span2
      = link_to 'Edit', edit_bill_path(@bill), class: 'btn btn-primary'
    .span10
      .dropdown
        %a.btn.btn-primary#dLabel{"data-target" => "#", "data-toggle" => "dropdown", :href => "/page.html", :role => "button"}
          More
          %span.caret
        %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
          %li=link_to 'Preview', '#'
          %li=link_to 'Share with Team', '#'
          %li=link_to 'Send Bill', '#'
          %li=link_to 'Download as PDF', '#'
          %li.menu_group=link_to 'Bill Activity', '#'
          %li=link_to 'Post Comment', '#'
          %li=link_to 'Enter payment', '#'
          %li=link_to 'Mark as Sent', '#'
          %li=link_to 'Duplicate Bill', '#'
          %li.menu_group=link_to 'Close', '#'
          %li=link_to 'Delete', '#'
%br
.span12
  .span4
    From
    %br
    %strong
      = @bill.sender_full_name
    %br
    %br
    .span6
      To
    .span6
      = @bill.receiver.try(:name_with_address)
  %br
  .span4
    Date
    = @bill.date
    %br
    Bill Number
    = @bill.bill_number
    %br
    Bill Due
    = @bill.due_on
    %br
    Purchase Order Number
    = @bill.purchase_order_number
    %br
  .span4
  %br
.span12
  - @bill.items.each do |item|
    .span3
      = item.description
    .span2.small_width
      = item.quantity
    .span2.small_width
      = item.rate
    .span2
      = item.amount
.span12
  Bill Notes
  = @bill.bill_notes