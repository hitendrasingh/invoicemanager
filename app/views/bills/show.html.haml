- model_class = Bill
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:summary) + ':'
  %br
  = @bill.summary
%p
  %strong= model_class.human_attribute_name(:from) + ':'
  %br
  = @bill.from
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @bill.date
%p
  %strong= model_class.human_attribute_name(:bill_number) + ':'
  %br
  = @bill.bill_number
%p
  %strong= model_class.human_attribute_name(:to) + ':'
  %br
  = @bill.to
%p
  %strong= model_class.human_attribute_name(:due_on) + ':'
  %br
  = @bill.due_on
%p
  %strong= model_class.human_attribute_name(:purchase_order_number) + ':'
  %br
  = @bill.purchase_order_number
%p
  %strong= model_class.human_attribute_name(:invoice_notes) + ':'
  %br
  = @bill.invoice_notes
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @bill.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), bills_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_bill_path(@bill), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), bill_path(@bill), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
