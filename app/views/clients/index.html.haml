- model_class = Client
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:currency_id)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:phone)
      %th= model_class.human_attribute_name(:website_url)
      %th= model_class.human_attribute_name(:street_address)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:zipcode)
      %th= model_class.human_attribute_name(:country_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @clients.each do |client|
      %tr
        %td= link_to client.id, client_path(client)
        %td= client.first_name
        %td= client.last_name
        %td= client.currency_id
        %td= client.email
        %td= client.phone
        %td= client.website_url
        %td= client.street_address
        %td= client.city
        %td= client.state
        %td= client.zipcode
        %td= client.country_id
        %td=l client.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_client_path(client), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), client_path(client), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_client_path, :class => 'btn btn-primary'
