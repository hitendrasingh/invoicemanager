- model_class = Entry
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @entry.name
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @entry.date
%p
  %strong= model_class.human_attribute_name(:client) + ':'
  %br
  = @entry.client
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @entry.description
%p
  %strong= model_class.human_attribute_name(:hours) + ':'
  %br
  = @entry.hours
%p
  %strong= model_class.human_attribute_name(:file) + ':'
  %br
  = @entry.file
%p
  %strong= model_class.human_attribute_name(:link) + ':'
  %br
  = @entry.link
%p
  %strong= model_class.human_attribute_name(:tag_list) + ':'
  %br
  = @entry.tag_list
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @entry.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), entries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_entry_path(@entry), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), entry_path(@entry), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
