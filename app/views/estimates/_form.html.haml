= form_for @estimate, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :summary, :class => 'control-label'
    .controls
      = f.text_field :summary, :class => 'text_field'
  .control-group
    = f.label :from, :class => 'control-label'
    .controls
      = f.text_field :from, :class => 'text_field'
  .control-group
    = f.label :date, :class => 'control-label'
    .controls
      = f.text_field :date, :class => 'text_field'
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number, :class => 'text_field'
  .control-group
    = f.label :to, :class => 'control-label'
    .controls
      = f.text_field :to, :class => 'text_field'
  .control-group
    = f.label :due_on, :class => 'control-label'
    .controls
      = f.text_field :due_on, :class => 'text_field'
  .control-group
    = f.label :estimate_number, :class => 'control-label'
    .controls
      = f.text_field :estimate_number, :class => 'text_field'
  .control-group
    = f.label :estimate_notes, :class => 'control-label'
    .controls
      = f.text_field :estimate_notes, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), estimates_path, :class => 'btn'
