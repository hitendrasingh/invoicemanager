.span12
  .span10
    %h1 ESTIMATES
  .span2
    = link_to t('.new', :default => t("helpers.links.new")), new_estimate_path, :class => 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th Date
      %th Estimate Details
      %th Client
      %th Status
      %th Amount
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @estimates.each do |estimate|
      %tr
        %td= estimate.date
        %td= estimate.summary
        %td= estimate.to
        %td= estimate.state
        %td= estimate.amount
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_estimate_path(estimate), :class => 'btn btn-mini'
          = link_to t('.show', :default => t("helpers.links.show")), estimate_path(estimate), :class => 'btn btn-mini btn-info'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), estimate_path(estimate), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
