.span12.bg-info
  .span8
    %h2
      ESTIMATE
      =@estimate.estimate_number
  .span4.button-set-crud
    .span2
      = link_to 'Edit', edit_estimate_path(@estimate), class: 'btn btn-primary'
    .span10
      .dropdown
        %a.btn.btn-primary#dLabel{"data-target" => "#", "data-toggle" => "dropdown", :href => "/page.html", :role => "button"}
          More
          %span.caret
        %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
          %li=link_to 'Preview', '#'
          %li=link_to 'Share with Team', '#'
          %li=link_to 'Send Estimate', '#'
          %li=link_to 'Download as PDF', '#'
          %li.menu_group=link_to 'Estimate Activity', '#'
          %li=link_to 'Post Comment', '#'
          %li=link_to 'Enter payment', '#'
          %li=link_to 'Mark as Sent', '#'
          %li=link_to 'Duplicate Estimate', '#'
          %li.menu_group=link_to 'Close', '#'
          %li=link_to 'Delete', '#'
%br
.span12
  %h3 Estimate
  .margin5pr
    = @estimate.summary
.span12
  .span4
    %strong
      From
    %br
    .margin20pr
      = @estimate.sender_full_name
    .span6
      %strong To
    .span6
      = @estimate.receiver.try(:name_with_address)
  %br
  .span4
    %strong Date
    .margin2pr
      = @estimate.date
    %strong Estimate Number
    .margin2pr
      = @estimate.estimate_number
    %strong Estimate Due
    .margin2pr
      = @estimate.due_on
.span12
  .span3
    %strong
      Description
  .span3
    %strong
      Quantity
  .span3
    %strong
      Rate
  .span2
    %strong
      Amount
.span12.margin2pr
  - @estimate.items.each do |item|
    %hr
    .span3
      = item.description
    .span3
      = item.quantity
    .span3
      = item.rate
    .span2
      = item.amount
.span12
  %strong Estimate Note
  .margin10pr
    = @estimate.estimate_notes

.span12
  %hr
  Email: #{@estimate.user.email}