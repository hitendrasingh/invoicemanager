= simple_form_for @invoice, :html => { :class => 'form-horizontal' } do |f|
  = f.input :summary
  = f.input :from
  = f.input :date, as: :string, input_html: { class: 'datepicker' }
  = f.input :invoice_number
  = f.input :to
  = f.input :invoice_due, collection: DUE_IN
  = f.input :purchase_order_number
  = f.input :invoice_notes
  = f.input :user_id
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), invoices_path, :class => 'btn'
