- model_class = Invoice
.page-header
  %h1 INVOICES
%table.table.table-striped
  %thead
    %tr
      %th Date
      %th Invoice Details
      %th Client
      %th Status
      %th Amount
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @invoices.each do |invoice|
      %tr
        %td= invoice.date
        %td= invoice.summary
        %td= invoice.receiver.full_name
        %td= invoice.status
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_invoice_path(invoice), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), invoice_path(invoice), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_invoice_path, :class => 'btn btn-primary'
