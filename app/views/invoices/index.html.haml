- model_class = Invoice
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:summary)
      %th From
      %th= model_class.human_attribute_name(:date)
      %th= model_class.human_attribute_name(:invoice_number)
      %th Receiver
      %th= model_class.human_attribute_name(:invoice_due)
      %th= model_class.human_attribute_name(:purchase_order_number)
      %th= model_class.human_attribute_name(:invoice_notes)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @invoices.each do |invoice|
      %tr
        %td= link_to invoice.id, invoice_path(invoice)
        %td= invoice.summary
        %td= invoice.user.first_name
        %td= invoice.date
        %td= invoice.invoice_number
        %td= invoice.receiver_id
        %td= invoice.invoice_due
        %td= invoice.purchase_order_number
        %td= invoice.invoice_notes
        %td= invoice.user_id
        %td=l invoice.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_invoice_path(invoice), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), invoice_path(invoice), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_invoice_path, :class => 'btn btn-primary'
