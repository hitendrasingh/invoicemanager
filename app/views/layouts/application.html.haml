!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Invoicemanager"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"

  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand.fa.fa-home(href="#") Invoicemanager
          .container.nav-collapse
            %ul.nav.pull-right
              %li
                - if current_user
                  = link_to current_user do
                    %i.fa.fa-user.fa-lg
                      = current_user.first_name
              %li
                = link_to "/path1" do
                  %i.fa.fa-arrow-up.fa-lg
                    Upgrade
              %li
                = link_to "/path2" do
                  %i.fa.fa-life-ring.fa-lg
                    Support
              %li
                = link_to "/path3" do
                  %i.fa.fa-cog.fa-lg
                    Settings
              - if user_signed_in?
                %li
                  = link_to '/users/sign_out', method: :delete do
                    %i.fa.fa-sign-out.fa-lg
                      Log Out

    .container-fluid

      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Sidebar
              %li
                = link_to root_path do
                  %i.fa.fa-tachometer.fa-lg
                    Dashboard
              %li
                = link_to invoices_path do
                  %i.fa.fa-file.fa-lg
                    Invoices
              %li
                = link_to bills_path do
                  %i.fa.fa-file-o.fa-lg
                    Bills
              %li
                = link_to estimates_path do
                  %i.fa.fa-file-text.fa-lg
                    Estimates
              %li
                = link_to entries_path do
                  %i.fa.fa-road.fa-lg
                    Track
              %li
                = link_to users_path do
                  %i.fa.fa-users.fa-lg
                    Network
              %li
                = link_to '#' do
                  %i.fa.fa-file.fa-lg
                    Files
              %li
                = link_to '#' do
                  %i.fa.fa-trash-o.fa-lg
                    Trash
        .span9
          = bootstrap_flash
          = yield
    
      %footer
        %p Invoiceman &copy; Company 2014
