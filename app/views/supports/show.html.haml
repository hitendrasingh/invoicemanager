- model_class = Support
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:subject) + ':'
  = @support.subject
%p
  %strong= model_class.human_attribute_name(:message) + ':'
  = @support.message
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  = @support.user.full_name

= link_to t('.edit', :default => t("helpers.links.edit")), edit_support_path(@support), :class => 'btn'
= link_to t('.destroy', :default => t("helpers.links.destroy")), support_path(@support), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
