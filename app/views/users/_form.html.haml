= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :currency
  = f.input :email
  = f.input :phone
  = f.input :mobile
  = f.input :website
  = f.input :city
  = f.input :state
  = f.input :zipcode
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
